@using Finanstilsynet.ViewModels

@model DataTableViewModel

@{
    ViewData["Title"] = "Edit Item";
}

<div class="container mt-3">
    <h2>Edit Product</h2>

    <!-- Product Edit Form -->
    <form id="productForm" asp-action="Update" asp-controller="Product" method="post">
        <!-- Hidden input for the product's ID -->
        <input type="hidden" asp-for="ModelID" />

        <!-- Fields for Product Information -->
        <div class="form-group">
            <label asp-for="Product_Type"></label>
            <input asp-for="Product_Type" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Laptop_Speed"></label>
            <input asp-for="Laptop_Speed" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Laptop_RAM"></label>
            <input asp-for="Laptop_RAM" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Laptop_HardDisk"></label>
            <input asp-for="Laptop_HardDisk" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Laptop_Screen"></label>
            <input asp-for="Laptop_Screen" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PC_Speed"></label>
            <input asp-for="PC_Speed" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PC_RAM"></label>
            <input asp-for="PC_RAM" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PC_HardDisk"></label>
            <input asp-for="PC_HardDisk" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PC_ReadDrive"></label>
            <input asp-for="PC_ReadDrive" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Printer_Color"></label>
            <input asp-for="Printer_Color" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Printer_Type"></label>
            <input asp-for="Printer_Type" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Product_Price"></label>
            <input asp-for="Product_Price" class="form-control" type="number" step="0.01" />
        </div>

        <div class="form-group">
            <label asp-for="MakerID"></label>
            <input asp-for="MakerID" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Maker_Color"></label>
            <input asp-for="Maker_Color" class="form-control" />
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <hr />
</div>

